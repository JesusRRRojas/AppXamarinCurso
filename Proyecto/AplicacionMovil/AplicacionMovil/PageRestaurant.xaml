            <Label Grid.Row="0" Grid.ColumnSpan="2" HorizontalTextAlignment="Center" Text="Formulario de Restaurant" Margin="0,0,0,40" FontSize="Title" FontAttributes="Bold" TextColor="Black" />

            <Label Grid.Row="1" Grid.Column="0" Text="Nombre" VerticalTextAlignment="Center" FontSize="Subtitle" FontAttributes="Bold" TextColor="Black"/>
