            <Label Grid.Row="2" Grid.Column="0" Text="Descripción" VerticalTextAlignment="Center" FontSize="Subtitle" FontAttributes="Bold" TextColor="Black"/>
            <Entry Grid.Row="2" Grid.Column="1" />

            <Label Grid.Row="3" Grid.Column="0" Text="Dirección" VerticalTextAlignment="Center" FontSize="Subtitle" FontAttributes="Bold" TextColor="Black"/>
            <Entry Grid.Row="3" Grid.Column="1" />

            <Label Grid.Row="4" Grid.Column="0" Text="Imagen" VerticalTextAlignment="Center" FontSize="Subtitle" FontAttributes="Bold" TextColor="Black"/>
            <Image Grid.Row="4" Grid.Column="1" Source="C:\Users\Jesus\source\repos\CursoXamarinAPI\Proyecto\AplicacionMovil\AplicacionMovil.Android\Resources\drawable\Burger.jpg" />

            <Button Grid.Row="5" Grid.Column="1" Text="Seleccionar Imagen"/>
